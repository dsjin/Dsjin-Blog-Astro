---
import FeaturePost from '../components/FeaturePost.astro';
import RecentPost from '../components/RecentPost.astro';
import Layout from '../layouts/Layout.astro';
import { SEO } from "astro-seo";
const { origin, href } = Astro.url;
---

<Layout>
	<SEO
    slot="header"
    title="Home | DSJIN BLOG"
		description="Share more, Learn more!",
		openGraph={{
      basic: {
        title: "Home | DSJIN BLOG",
        type: 'website',
        image: `${origin}/default.png`,
        url: href
      }
    }}
		twitter={{
      card: 'summary_large_image',
      site: href,
      creator: 'Thatchakon Jom-ud',
      title: "Home | DSJIN BLOG",
      description: "Share more, Learn more!",
      image: `${origin}/default.png`
    }}
  />
	<div class="c-header">
		<div class="container">
			<h1>Blog</h1>
			<p>Share more, Learn more!</p>
		</div>
	</div>
	<div class="container">
		<FeaturePost />
		<div
        class="latest_title _flex _row _justify_content_between _align_items_center"
      >
        <h1>New Arrviral</h1>
        <a
          href="/latest-posts"
          class="more-button btn btn-primary _display_inline_block"
        >
          MORE POSTS
        </a>
      </div>
      <div class="_flex _row _wrap _justify_content_between">
				<RecentPost />
      </div>
    </div>
	</div>
</Layout>

<style>
	.latest_title {
		position: -webkit-sticky;
		position: sticky;
		top: 0;
		background-color: white;
	}
	.btn {
		padding-top: 0.5em;
		padding-bottom: 0.5em;
		padding-left: 1em;
		padding-right: 1em;
		border-radius: 15px;
		font-size: 0.75em;
		transition: all 1s cubic-bezier(0.19, 1, 0.22, 1);
		text-decoration: transparent;
		&-primary {
			background-color: #122140;
			color: white;
			&:hover {
				background-color: #1b435f;
			}
		}
	}
	.home-links a {
		margin-right: 1rem;
	}
	.c-header {
		position: relative;
		height: 300px;
		width: 100%;
		background-color: #112d32;
		margin-top: -10px;
		color: white;
		overflow: hidden;
		h1,
		p {
			margin: 0;
		}
		&::after {
			content: '';
			position: absolute;
			bottom: 0;
			width: 100%;
			height: 100%;
			background-image: url('/bg.svg');
			background-repeat: no-repeat;
			background-size: cover;
		}
}
</style>
